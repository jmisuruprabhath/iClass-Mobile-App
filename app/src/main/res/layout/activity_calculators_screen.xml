<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    tools:context=".CalculatorsScreen">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="178dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="163dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="165dp"
          android:background="@color/colorTile"
          android:radius="30dp">


        <ImageView

            android:id="@+id/voicecal"
            android:layout_width="102dp"
            android:layout_height="94dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="45dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/voicecalculator" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:layout_below="@+id/voicecal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:text="Voice Calculator"
            android:textColor="@color/colorTileText"
            android:textStyle="bold" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="163dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="165dp"
          android:background="@color/colorTile"
          android:radius="30dp">


        <ImageView

            android:id="@+id/gpaii"
            android:layout_width="102dp"
            android:layout_height="94dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="45dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/gpacalicon" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="111dp"
            android:layout_height="27dp"
            android:layout_below="@+id/gpaii"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="GPA Calculator"
            android:textColor="@color/colorTileText"
            android:textStyle="bold" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="178dp"
      android:layout_marginTop="178dp"
      android:layout_marginBottom="375dp"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="163dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="165dp"
          android:background="@color/colorTile"
          android:radius="30dp">


        <ImageView

            android:id="@+id/averagecalimg"
            android:layout_width="102dp"
            android:layout_height="94dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="45dp"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/averagecal" />

        <TextView
            android:id="@+id/averagecal"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:layout_below="@+id/averagecalimg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Average Calculator"
            android:textColor="@color/colorTileText"
            android:textStyle="bold" />

      </RelativeLayout>
    </androidx.cardview.widget.CardView>

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
